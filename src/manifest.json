{
    "manifest_version": 3,
    "name": "Forget Specific History",
    "version": "1.0.0",
    "description": "This extension allows you to specify specific URLs or patterns to remove from your history and never save.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "history"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}